@page
@model PocketBalance.Pages.ExpenseCategories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row my-4">
    <div class="col">
        <h3>List of Category Expenses</h3>
    </div>
    <div class="col d-flex flex-row-reverse">
        <a class="btn btn-primary" asp-page="Create">New Category Expenses</a>
    </div>
</div>

<table class="table table-bordered table-responsive-xl">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseCategory[0].ExpenseCategoryName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ExpenseCategory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseCategoryName)
            </td>
            <td>
                <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
