@page
@model PocketBalance.Pages.Expenses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>New Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseName" class="control-label"></label>
                <input asp-for="Expense.ExpenseName" class="form-control" />
                <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Amount" class="control-label"></label>
                <input asp-for="Expense.Amount" class="form-control" />
                <span asp-validation-for="Expense.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseDate" class="control-label"></label>
                <input asp-for="Expense.ExpenseDate" class="form-control" />
                <span asp-validation-for="Expense.ExpenseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseCategoryId" class="control-label"></label>
                <select asp-for="Expense.ExpenseCategoryId" class ="form-control" asp-items="ViewBag.ExpenseCategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
